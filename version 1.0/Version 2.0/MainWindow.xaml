<Window x:Class="Version_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Version_2._0"
        xmlns:viewmodels="clr-namespace:Version_2._0.ViewModel"
        xmlns:view="clr-namespace:Version_2._0.view"
        mc:Ignorable="d"
        Title="EasySave" 
        Height="450" 
        Width="800" 
        WindowStartupLocation="CenterScreen"
        Icon="/disquette.png" 
        ResizeMode="NoResize"
        Background="#FF292929">
        <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewmodels:ExeSaveViewModel}">
                <view:ExeSaveView/>
            </DataTemplate>
        </ContentControl.Resources>
        </ContentControl>
</Window>
